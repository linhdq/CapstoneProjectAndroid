<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context="com.ldz.fpt.businesscardscannerandroid.activity.result_activity.ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tint_color"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/imv_card"
            android:text="Name:"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:background="@color/tint_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_below="@id/txt_name"
            android:id="@+id/recycler_view_name"
            android:scrollbars="none"
            />

        <TextView
            android:id="@+id/txt_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/recycler_view_name"
            android:text="Job Title:"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:background="@color/tint_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_below="@id/txt_job"
            android:id="@+id/recycler_view_job"
            android:scrollbars="none"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_below="@id/recycler_view_job"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/item_add_job"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/custom_circle_button"
                android:src="@drawable/ic_add"
                android:tint="@color/white"
                android:padding="@dimen/_7sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Add job ..."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/tint_color"
                android:textStyle="italic"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/item_add_job"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Phone Number:"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:background="@color/tint_color"
            android:paddingLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_below="@id/txt_phone"
            android:id="@+id/recycler_view_phone"
            android:scrollbars="none"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_below="@id/recycler_view_phone"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/item_add_phone"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/custom_circle_button"
                android:src="@drawable/ic_add"
                android:tint="@color/white"
                android:padding="@dimen/_7sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Add phone number ..."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/tint_color"
                android:textStyle="italic"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/item_add_phone"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Email:"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:background="@color/tint_color"
            android:paddingLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_below="@id/txt_email"
            android:id="@+id/recycler_view_email"
            android:scrollbars="none"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_below="@id/recycler_view_email"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/item_add_email"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/custom_circle_button"
                android:src="@drawable/ic_add"
                android:tint="@color/white"
                android:padding="@dimen/_7sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Add job ..."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/tint_color"
                android:textStyle="italic"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_raw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/item_add_email"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Raw Output"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:background="@color/tint_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_raw"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/txt_raw_output"
            />
    </RelativeLayout>
</ScrollView>
